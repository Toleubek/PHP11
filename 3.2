class Goods
{
    public $foods;
    public $price;
    public function __construct($foods, $price)
    {
        $this->foods = $foods;
        $this->price = $price;
    }
    public function printItem()
    {
        foreach ($this->foods as $food)
        {
            echo $food.'</br>';
        }
    }
}
$goods1 = new Goods(array('milk','bread','tea'), 10);
$goods2 = new Goods(array('beer','cigarette','vodka'), 100);
$goods1->printItem();
$goods2->printItem();

