//2

$newAnimals = array();
foreach($animals as $animal){
	foreach($animal as $value){
		if (str_word_count($value)>1){
			array_push($newAnimals, $value);
		}
	}
	
}

//3

foreach ($newAnimals as $newAnimal){
	$nameAnimals[] = explode(' ', $newAnimal);
}

foreach ($nameAnimals as $nameAnimal){
	$firstName[] = $nameAnimal[0];
	$secondName[] = $nameAnimal[1];
} 

$animalsRandom = array(); 

